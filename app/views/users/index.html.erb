<h1>Listing users</h1>

<table>


<% @users.each do |user| %>
  <tr>
    <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><% if (user.active != 0) %>
    <%= link_to 'Block', user, :confirm => 'Are you sure?', :method => :delete %>
     <% end %>

     <% if (user.active == 0) %>
    <%= link_to 'UnBlock', user, :confirm => 'Are you sure?', :method => :delete %>
     <% end %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
